{
  "$schema": "https://api.follow-apps.com/json-schemas/inapp-templates/v1_0_0.json",
  "template_options": {
    "technical_name": "survey_fullscreen_template",
    "title": {
      "en": "Survey InApp",
      "fr": "InApp questionnaire"
    },
    "description": {
      "en": "",
      "fr": ""
    },
    "version": "1.0.0",
    "author": "FollowAnalytics"
  },
  "sdk_options": {
    "window": {
      "timeout": 0
    },
    "animation": {
      "entry": {
        "delay": 0.5,
        "effect": "fadeIn"
      },
      "exit": {
        "delay": 1.5,
        "effect": "fadeOut"
      }
    }
  },
  "inputs": [
    {
      "name": "general_title",
      "label": {
        "en": "Title",
        "fr": "Title"
      },
      "type": "group",
      "hide_label": false,
      "size": 100,
      "inputs": [
        {
          "name": "font_size_title",
          "label": {
            "en": "Size",
            "fr": "Taille"
          },
          "type": "number",
          "hide_label": false,
          "size": 50,
          "default": 18,
          "precision": 0,
          "min": 12,
          "max": 32
        },
        {
          "name": "font_color_title",
          "label": {
            "en": "Color",
            "fr": "Couleur"
          },
          "type": "color",
          "hide_label": false,
          "size": 50,
          "default": "#000000"
        }
      ]
    },
    {
      "name": "general_body",
      "label": {
        "en": "Body",
        "fr": "Contenu"
      },
      "type": "group",
      "hide_label": false,
      "size": 100,
      "inputs": [
        {
          "name": "font_size_body",
          "label": {
            "en": "Size",
            "fr": "Taille"
          },
          "type": "number",
          "hide_label": false,
          "size": 50,
          "default": 16,
          "precision": 0,
          "min": 12,
          "max": 32
        },
        {
          "name": "font_color_body",
          "label": {
            "en": "Color",
            "fr": "Couleur"
          },
          "type": "color",
          "hide_label": false,
          "size": 50,
          "default": "#000000"
        }
      ]
    },
    {
      "name": "general_image",
      "label": {
        "en": "Avatar",
        "fr": "Avatar"
      },
      "type": "group",
      "inputs": [
        {
          "name": "image",
          "label": {
            "en": "Image",
            "fr": "Image"
          },
          "type": "image",
          "default": "./assets/images/Avatar.png"
        }
      ]
    },
    {
      "name": "general_next_button",
      "label": {
        "en": "The 'next' button on the question page",
        "fr": "Le bouton 'Suivant' sur la page de question"
      },
      "type": "group",
      "hide_label": false,
      "size": 100,
      "inputs": [
        {
          "name": "text",
          "label": {
            "en": "Name",
            "fr": "Nom"
          },
          "type": "string",
          "hide_label": false,
          "size": 65,
          "default": "Suivant",
          "max_length": 30,
          "lines": 1
        },
        {
          "name": "color",
          "label": {
            "en": "Color",
            "fr": "La couleur "
          },
          "type": "color",
          "hide_label": false,
          "size": 35,
          "default": "#F16E00"
        }
      ]
    },
    {
      "name": "general_params_for_inputs",
      "label": {
        "en": "Params for inputs",
        "fr": "Params pour les entrées"
      },
      "type": "group",
      "inputs": [
        {
          "name": "textarea_placeholder",
          "label": {
            "en": "Placeholder for textarea",
            "fr": "Espace réservé pour textarea"
          },
          "type": "string",
          "default": "Saisissez ici votre réponse.",
          "max_length": 100,
          "lines": 1
        },
        {
          "name": "text_range_label_from",
          "label": {
            "en": "Legend for 'from' label",
            "fr": "La légende de 'de' l'étiquette"
          },
          "type": "string",
          "default": "Quasi nulle",
          "lines": 1
        },
        {
          "name": "text_range_label_to",
          "label": {
            "en": "Legend for 'to' label",
            "fr": "La légende de 'à' étiquette"
          },
          "type": "string",
          "default": "Très probable",
          "lines": 1
        }
      ]
    },
    {
      "name": "start_params",
      "label": {
        "en": "Start survey",
        "fr": "Début de l'enquête"
      },
      "type": "group",
      "inputs": [
        {
          "name": "greeting_title",
          "label": {
            "en": "Title",
            "fr": "Titre"
          },
          "type": "string",
          "default": "Merci d’avoir utilisé Orange et moi !",
          "max_length": 200,
          "lines": 2
        },
        {
          "name": "greeting_text",
          "label": {
            "en": "Text",
            "fr": "Texte"
          },
          "type": "string",
          "default": "Afin de faire évoluer notre application pour qu’elle réponde à tous vos besoins nous souhaiterions recueillir votre avis.",
          "max_length": 500,
          "lines": 5
        },
        {
          "name": "greeting_button_text",
          "label": {
            "en": "Name of the button",
            "fr": "Nom du bouton"
          },
          "type": "string",
          "default": "Répondre au sondage",
          "max_length": 30,
          "lines": 1
        }
      ]
    },
    {
      "name": "end_params",
      "label": {
        "en": "End survey",
        "fr": "Fin de l'enquête"
      },
      "type": "group",
      "inputs": [
        {
          "name": "goodbye_title",
          "label": {
            "en": "Title",
            "fr": "Titre"
          },
          "type": "string",
          "default": "Merci !",
          "max_length": 200,
          "lines": 3
        },
        {
          "name": "goodbye_text",
          "label": {
            "en": "Text",
            "fr": "Texte"
          },
          "type": "string",
          "default": "Votre avis est très important pour nous, souhaitez-vous que nos équipes vous recontactent ?",
          "max_length": 100,
          "lines": 5
        },
        {
          "name": "goodbye_button_text",
          "label": {
            "en": "Name of the button",
            "fr": "Nom du bouton"
          },
          "type": "string",
          "default": "Fin du sondage",
          "max_length": 30,
          "lines": 1
        },
        {
          "name": "warning_text",
          "label": {
            "en": "Legal mentions",
            "fr": "Mentions légales"
          },
          "type": "string",
          "default": "Mentions légales lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. ?",
          "max_length": 500,
          "lines": 5
        }
      ]
    },
    {
      "name": "goodbye_inputs",
      "label": {
        "en": "Feedback form on the finish page",
        "fr": "Formulaire de commentaires sur la page terminer"
      },
      "type": "group",
      "inputs": [
        {
          "name": "placeholder_name",
          "label": {
            "en": "Placeholder 1",
            "fr": "Réservé 1"
          },
          "type": "string",
          "default": "Prénom Nom",
          "lines": 1
        },
        {
          "name": "placeholder_phone",
          "label": {
            "en": "Placeholder 2",
            "fr": "Réservé 2"
          },
          "type": "string",
          "default": "Numéro de mobile",
          "lines": 1
        }
      ]
    },
    {
      "name": "questions",
      "label": {
        "en": "Questionnaire Page",
        "fr": "Pages du questionnaire"
      },
      "type": "pages",
      "min_pages": 1,
      "max_pages": 10,
      "inputs": [
        {
          "name": "question",
          "type": "group",
          "label": {
            "en": "Question",
            "fr": "Question"
          },
          "inputs": [
            {
              "name": "text",
              "label": {
                "en": "Text",
                "fr": "Texte"
              },
              "type": "string",
              "lines": 3
            },
            {
              "name": "type",
              "label": {
                "en": "Type of answer",
                "fr": "Type de réponse"
              },
              "type": "enum",
              "default": "checkbox",
              "values": [
                {
                  "value": "checkbox",
                  "caption": {
                    "en": "Multiple choice",
                    "fr": "Plusieurs choix"
                  }
                },
                {
                  "value": "radio",
                  "caption": {
                    "en": "Yes/No",
                    "fr": "Oui / Non"
                  }
                },
                {
                  "value": "textarea",
                  "caption": {
                    "en": "Textarea",
                    "fr": "Textarea"
                  }
                },
                {
                  "value": "rating",
                  "caption": {
                    "en": "Rating",
                    "fr": "Évaluation"
                  }
                },
                {
                  "value": "range",
                  "caption": {
                    "en": "Range",
                    "fr": "Gamme"
                  }
                }
              ]
            }
          ]
        },
        {
          "name": "options",
          "label": {
            "en": "Options",
            "fr": "Options"
          },
          "tooltip": {
            "en": "The 'textarea', 'rating' and 'range' question type doesn't need any options",
            "fr": "Le type de question 'textarea', 'note' et 'range' n'a pas besoin d'options"
          },
          "type": "table",
          "max_size": 6,
          "inputs": [
            {
              "name": "text",
              "label": {
                "en": "Text",
                "fr": "Texte"
              },
              "type": "string"
            }
          ]
        }
      ]
    },
    {
      "name": "positive_questions",
      "label": {
        "en": "Positive flow questions",
        "fr": "Questions de flux positif"
      },
      "type": "pages",
      "min_pages": 1,
      "max_pages": 10,
      "inputs": [
        {
          "name": "question",
          "type": "group",
          "label": {
            "en": "Question",
            "fr": "Question"
          },
          "inputs": [
            {
              "name": "text",
              "label": {
                "en": "Text",
                "fr": "Texte"
              },
              "type": "string",
              "lines": 3
            },
            {
              "name": "type",
              "label": {
                "en": "Type of answer",
                "fr": "Type de réponse"
              },
              "type": "enum",
              "default": "checkbox",
              "values": [
                {
                  "value": "checkbox",
                  "caption": {
                    "en": "Multiple choice",
                    "fr": "Plusieurs choix"
                  }
                },
                {
                  "value": "radio",
                  "caption": {
                    "en": "Yes/No",
                    "fr": "Oui / Non"
                  }
                },
                {
                  "value": "textarea",
                  "caption": {
                    "en": "Textarea",
                    "fr": "Textarea"
                  }
                },
                {
                  "value": "rating",
                  "caption": {
                    "en": "Rating",
                    "fr": "Évaluation"
                  }
                },
                {
                  "value": "range",
                  "caption": {
                    "en": "Range",
                    "fr": "Gamme"
                  }
                }
              ]
            }
          ]
        },
        {
          "name": "options",
          "label": {
            "en": "Options",
            "fr": "Options"
          },
          "tooltip": {
            "en": "The 'textarea', 'rating' and 'range' question type doesn't need any options",
            "fr": "Le type de question 'textarea', 'note' et 'range' n'a pas besoin d'options"
          },
          "type": "table",
          "max_size": 6,
          "inputs": [
            {
              "name": "text",
              "label": {
                "en": "Text",
                "fr": "Texte"
              },
              "type": "string"
            }
          ]
        }
      ]
    },
    {
      "name": "negative_questions",
      "label": {
        "en": "Negative flow questions",
        "fr": "Questions de flux négatif"
      },
      "type": "pages",
      "min_pages": 1,
      "max_pages": 10,
      "inputs": [
        {
          "name": "question",
          "type": "group",
          "label": {
            "en": "Question",
            "fr": "Question"
          },
          "inputs": [
            {
              "name": "text",
              "label": {
                "en": "Text",
                "fr": "Texte"
              },
              "type": "string",
              "lines": 3
            },
            {
              "name": "type",
              "label": {
                "en": "Type of answer",
                "fr": "Type de réponse"
              },
              "type": "enum",
              "default": "checkbox",
              "values": [
                {
                  "value": "checkbox",
                  "caption": {
                    "en": "Multiple choice",
                    "fr": "Plusieurs choix"
                  }
                },
                {
                  "value": "radio",
                  "caption": {
                    "en": "Yes/No",
                    "fr": "Oui / Non"
                  }
                },
                {
                  "value": "textarea",
                  "caption": {
                    "en": "Textarea",
                    "fr": "Textarea"
                  }
                },
                {
                  "value": "rating",
                  "caption": {
                    "en": "Rating",
                    "fr": "Évaluation"
                  }
                },
                {
                  "value": "range",
                  "caption": {
                    "en": "Range",
                    "fr": "Gamme"
                  }
                }
              ]
            }
          ]
        },
        {
          "name": "options",
          "label": {
            "en": "Options",
            "fr": "Options"
          },
          "tooltip": {
            "en": "The 'textarea', 'rating' and 'range' question type doesn't need any options",
            "fr": "Le type de question 'textarea', 'note' et 'range' n'a pas besoin d'options"
          },
          "type": "table",
          "max_size": 6,
          "inputs": [
            {
              "name": "text",
              "label": {
                "en": "Text",
                "fr": "Texte"
              },
              "type": "string"
            }
          ]
        }
      ]
    }
  ]
}