{
  "$schema": "https://api.follow-apps.com/json-schemas/inapp-templates/v1_0_0.json",
  "template_options": {
    "technical_name": "survey_fullscreen_template",
    "title": {
      "en": "Survey InApp",
      "fr": "InApp questionnaire"
    },
    "description": {
      "en": "",
      "fr": ""
    },
    "version": "1.0.0",
    "author": "FollowAnalytics"
  },
  "sdk_options": {
    "window": {
      "timeout": 0
    },
    "animation": {
      "entry": {
        "delay": 0.5,
        "effect": "fadeIn"
      },
      "exit": {
        "delay": 1.5,
        "effect": "fadeOut"
      }
    }
  },
  "inputs": [
    {
      "name": "global_params",
      "label": {
        "en": "Start and finish pages",
        "fr": "Pages de début et de fin"
      },
      "type": "group",
      "inputs": [
        {
          "name": "image",
          "label": {
            "en": "Avatar on the start page",
            "fr": "Avatar sur la page de démarrage"
          },
          "type": "image",
          "default": "./assets/images/Avatar.png"
        },
        {
          "name": "greeting_title",
          "label": {
            "en": "Title on the start page",
            "fr": "Titre sur la page de démarrage"
          },
          "type": "string",
          "default": "Merci d’avoir utilisé Orange et moi !",
          "max_length": 200,
          "lines": 2
        },
        {
          "name": "greeting_text",
          "label": {
            "en": "Text on the start page",
            "fr": "Texte sur la page de démarrage"
          },
          "type": "string",
          "default": "Afin de faire évoluer notre application pour qu’elle réponde à tous vos besoins nous souhaiterions recueillir votre avis.",
          "max_length": 1000,
          "lines": 5
        },
        {
          "name": "button_text",
          "label": {
            "en": "Name of the button on the start page",
            "fr": "Nom du bouton sur la page d'accueil"
          },
          "type": "string",
          "default": "Répondre au sondage",
          "max_length": 30,
          "lines": 1
        },
        {
          "name": "goodbye_title",
          "label": {
            "en": "Title on the finish page",
            "fr": "Titre sur la page de finition"
          },
          "type": "string",
          "default": "Merci !",
          "max_length": 200,
          "lines": 3
        },
        {
          "name": "goodbye_text",
          "label": {
            "en": "Text on the finish page",
            "fr": "Texte sur la page de finition"
          },
          "type": "string",
          "default": "Votre avis est très important pour nous, souhaitez-vous que nos équipes vous recontactent ?",
          "max_length": 100,
          "lines": 5
        },
        {
          "name": "warning_text",
          "label": {
            "en": "Warning block on the finish page",
            "fr": "Bloc d'avertissement sur la page de finition"
          },
          "type": "string",
          "default": "Mentions légales lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. ?",
          "max_length": 500,
          "lines": 5
        },
        {
          "name": "is_enable_goodbye_form",
          "label": {
            "en": "Enable the feedback form?",
            "fr": "Activer le formulaire de commentaires?"
          },
          "type": "boolean",
          "default": true
        }
      ]
    },
    {
      "name": "goodbye_inputs",
      "label": {
        "en": "Feedback form on the finish page",
        "fr": "Formulaire de commentaires sur la page terminer"
      },
      "type": "table",
      "min_size": 1,
      "max_size": 3,
      "inputs": [
        {
          "name": "name",
          "label": {
            "en": "Name of input",
            "fr": "Nom de l'entrée"
          },
          "type": "string",
          "default": "name",
          "lines": 1
        },
        {
          "name": "placeholder",
          "label": {
            "en": "Placeholder",
            "fr": "Réservé"
          },
          "type": "string",
          "default": "Prénom Nom",
          "lines": 1
        }
      ]
    },
    {
      "name": "questions",
      "label": {
        "en": "Questionnaire Page",
        "fr": "Pages du questionnaire"
      },
      "type": "pages",
      "min_pages": 1,
      "max_pages": 10,
      "inputs": [
        {
          "name": "question",
          "type": "group",
          "label": {
            "en": "Question",
            "fr": "Question"
          },
          "inputs": [
            {
              "name": "text",
              "label": {
                "en": "Text",
                "fr": "Texte"
              },
              "type": "string",
              "lines": 3
            },
            {
              "name": "type",
              "label": {
                "en": "Type of answer",
                "fr": "Type de réponse"
              },
              "tooltip": {
                "en": "The question types 'textarea', 'rating' and 'range' don't need options",
                "fr": "Les types de questions 'textarea', 'rating' et 'range' n'ont pas besoin d'options"
              },
              "type": "enum",
              "default": "checkbox",
              "values": [
                {
                  "value": "checkbox",
                  "caption": {
                    "en": "Multiple checkbox",
                    "fr": "Plusieurs case"
                  }
                },
                {
                  "value": "radio",
                  "caption": {
                    "en": "Radio button",
                    "fr": "Bouton Radio"
                  }
                },
                {
                  "value": "textarea",
                  "caption": {
                    "en": "Textarea",
                    "fr": "Textarea"
                  }
                },
                {
                  "value": "rating",
                  "caption": {
                    "en": "Rating",
                    "fr": "Évaluation"
                  }
                },
                {
                  "value": "range",
                  "caption": {
                    "en": "Range",
                    "fr": "Gamme"
                  }
                }
              ]
            },
            {
              "name": "parent_index",
              "label": {
                "en": "Show after question #",
                "fr": "Montrer Après question #"
              },
              "tooltip": {
                "en": "This question will appear after the specified question",
                "fr": "Cette question apparaîtra après la question déterminée"
              },
              "type": "string",
              "lines": 1
            },
            {
              "name": "option_index",
              "label": {
                "en": "To bind to the option #",
                "fr": "De se lier à l'option #"
              },
              "tooltip": {
                "en": "This question is linked to answer #",
                "fr": "Cette question est liée à la réponse #"
              },
              "type": "string",
              "lines": 1
            }
          ]
        },
        {
          "name": "options",
          "label": {
            "en": "Options",
            "fr": "Options"
          },
          "type": "table",
          "max_size": 6,
          "inputs": [
            {
              "name": "text",
              "label": {
                "en": "Text",
                "fr": "Texte"
              },
              "type": "string"
            }
          ]
        }
      ]
    }
  ]
}