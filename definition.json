{
  "$schema": "https://api.follow-apps.com/json-schemas/inapp-templates/v1_0_0.json",
  "template_options": {
    "technical_name": "survey_fullscreen_template",
    "title": {
      "en": "Survey InApp",
      "fr": "InApp questionnaire"
    },
    "description": {
      "en": "",
      "fr": ""
    },
    "version": "1.0.0",
    "author": "FollowAnalytics"
  },
  "sdk_options": {
    "window": {
      "timeout": 0
    },
    "animation": {
      "entry": {
        "delay": 0.5,
        "effect": "fadeIn"
      },
      "exit": {
        "delay": 1.5,
        "effect": "fadeOut"
      }
    }
  },
  "inputs": [
    {
      "name": "general_params",
      "label": {
        "en": "General params",
        "fr": "Général params"
      },
      "type": "group",
      "inputs": [
        {
          "name": "font_size_title",
          "label": {
            "en": "Title font size",
            "fr": "Taille de la police de titre"
          },
          "type": "number",
          "default": 18,
          "precision": 0,
          "min": 12,
          "max": 32
        },
        {
          "name": "font_color_title",
          "label": {
            "en": "Title font color",
            "fr": "Couleur de la police de titre"
          },
          "type": "color",
          "default": "#000000"
        },
        {
          "name": "font_size_body",
          "label": {
            "en": "Body font size",
            "fr": "Taille de la police du corps"
          },
          "type": "number",
          "default": 16,
          "precision": 0,
          "min": 12,
          "max": 32
        },
        {
          "name": "font_color_body",
          "label": {
            "en": "Body font color",
            "fr": "Couleur de la police du corps"
          },
          "type": "color",
          "default": "#000000"
        },
        {
          "name": "image",
          "label": {
            "en": "Avatar on the start page",
            "fr": "Avatar sur la page de démarrage"
          },
          "type": "image",
          "default": "./assets/images/Avatar.png"
        },
        {
          "name": "next_button_text",
          "label": {
            "en": "Name of the 'next' button on the question page",
            "fr": "Nom du bouton 'Suivant' sur la page de question"
          },
          "type": "string",
          "default": "Suivant",
          "max_length": 30,
          "lines": 1
        },
        {
          "name": "next_button_color",
          "label": {
            "en": "Color of the 'next' button",
            "fr": "La couleur du bouton 'suivant'"
          },
          "type": "color",
          "default": "#F16E00"
        },
        {
          "name": "textarea_placeholder",
          "label": {
            "en": "Placeholder for 'textarea' input",
            "fr": "Espace réservé pour l'entrée 'textarea'"
          },
          "type": "string",
          "default": "Saisissez ici votre réponse.",
          "max_length": 100,
          "lines": 1
        },
        {
          "name": "text_range_label_from",
          "label": {
            "en": "Legend for 'from' label on the range input",
            "fr": "Légende pour l'étiquette 'from' sur l'entrée de plage"
          },
          "type": "string",
          "default": "Quasi nulle",
          "lines": 1
        },
        {
          "name": "text_range_label_to",
          "label": {
            "en": "Legend for 'to' label on the range input",
            "fr": "Légende pour l'étiquette ' to ' sur l'entrée de plage"
          },
          "type": "string",
          "default": "Très probable",
          "lines": 1
        }
      ]
    },
    {
      "name": "start_params",
      "label": {
        "en": "Start survey",
        "fr": "Début de l'enquête"
      },
      "type": "group",
      "inputs": [
        {
          "name": "greeting_title",
          "label": {
            "en": "Title on the start page",
            "fr": "Titre sur la page de démarrage"
          },
          "type": "string",
          "default": "Merci d’avoir utilisé Orange et moi !",
          "max_length": 200,
          "lines": 2
        },
        {
          "name": "greeting_text",
          "label": {
            "en": "Text on the start page",
            "fr": "Texte sur la page de démarrage"
          },
          "type": "string",
          "default": "Afin de faire évoluer notre application pour qu’elle réponde à tous vos besoins nous souhaiterions recueillir votre avis.",
          "max_length": 500,
          "lines": 5
        },
        {
          "name": "greeting_button_text",
          "label": {
            "en": "Name of the button on the start page",
            "fr": "Nom du bouton sur la page d'accueil"
          },
          "type": "string",
          "default": "Répondre au sondage",
          "max_length": 30,
          "lines": 1
        }
      ]
    },
    {
      "name": "end_params",
      "label": {
        "en": "End survey",
        "fr": "Fin de l'enquête"
      },
      "type": "group",
      "inputs": [
        {
          "name": "goodbye_title",
          "label": {
            "en": "Title on the finish page",
            "fr": "Titre sur la page de finition"
          },
          "type": "string",
          "default": "Merci !",
          "max_length": 200,
          "lines": 3
        },
        {
          "name": "goodbye_text",
          "label": {
            "en": "Text on the finish page",
            "fr": "Texte sur la page de finition"
          },
          "type": "string",
          "default": "Votre avis est très important pour nous, souhaitez-vous que nos équipes vous recontactent ?",
          "max_length": 100,
          "lines": 5
        },
        {
          "name": "goodbye_button_text",
          "label": {
            "en": "Name of the button on the end page",
            "fr": "Nom du bouton sur la page de fin"
          },
          "type": "string",
          "default": "Fin du sondage",
          "max_length": 30,
          "lines": 1
        },
        {
          "name": "warning_text",
          "label": {
            "en": "Legal mentions on the finish page",
            "fr": "Mentions légales sur la page terminer"
          },
          "type": "string",
          "default": "Mentions légales lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. ?",
          "max_length": 500,
          "lines": 5
        }
      ]
    },
    {
      "name": "goodbye_inputs",
      "label": {
        "en": "Feedback form on the finish page",
        "fr": "Formulaire de commentaires sur la page terminer"
      },
      "type": "group",
      "inputs": [
        {
          "name": "placeholder_name",
          "label": {
            "en": "Placeholder for input 'name'",
            "fr": "Espace réservé pour l'entrée 'nom'"
          },
          "type": "string",
          "default": "Prénom Nom",
          "lines": 1
        },
        {
          "name": "placeholder_phone",
          "label": {
            "en": "Placeholder for input 'mobile'",
            "fr": "Espace réservé pour l'entrée 'mobile'"
          },
          "type": "string",
          "default": "Numéro de mobile",
          "lines": 1
        }
      ]
    },
    {
      "name": "questions",
      "label": {
        "en": "Questionnaire Page",
        "fr": "Pages du questionnaire"
      },
      "type": "pages",
      "min_pages": 1,
      "max_pages": 10,
      "inputs": [
        {
          "name": "question",
          "type": "group",
          "label": {
            "en": "Question",
            "fr": "Question"
          },
          "inputs": [
            {
              "name": "text",
              "label": {
                "en": "Text",
                "fr": "Texte"
              },
              "type": "string",
              "lines": 3
            },
            {
              "name": "type",
              "label": {
                "en": "Type of answer",
                "fr": "Type de réponse"
              },
              "type": "enum",
              "default": "checkbox",
              "values": [
                {
                  "value": "checkbox",
                  "caption": {
                    "en": "Multiple checkbox",
                    "fr": "Plusieurs case"
                  }
                },
                {
                  "value": "radio",
                  "caption": {
                    "en": "Yes/No question",
                    "fr": "Oui / Non question"
                  }
                },
                {
                  "value": "textarea",
                  "caption": {
                    "en": "Textarea",
                    "fr": "Textarea"
                  }
                }
              ]
            }
          ]
        },
        {
          "name": "options",
          "label": {
            "en": "Options",
            "fr": "Options"
          },
          "tooltip": {
            "en": "The 'textarea' question type doesn't need any options",
            "fr": "Le type de question 'textarea' n'a pas besoin d'options"
          },
          "type": "table",
          "max_size": 6,
          "inputs": [
            {
              "name": "text",
              "label": {
                "en": "Text",
                "fr": "Texte"
              },
              "type": "string"
            }
          ]
        }
      ]
    },
    {
      "name": "positive_questions",
      "label": {
        "en": "Positive flow questions",
        "fr": "Questions de flux positif"
      },
      "type": "pages",
      "min_pages": 1,
      "max_pages": 10,
      "inputs": [
        {
          "name": "question",
          "type": "group",
          "label": {
            "en": "Question",
            "fr": "Question"
          },
          "inputs": [
            {
              "name": "text",
              "label": {
                "en": "Text",
                "fr": "Texte"
              },
              "type": "string",
              "lines": 3
            },
            {
              "name": "type",
              "label": {
                "en": "Type of answer",
                "fr": "Type de réponse"
              },
              "type": "enum",
              "default": "checkbox",
              "values": [
                {
                  "value": "checkbox",
                  "caption": {
                    "en": "Multiple checkbox",
                    "fr": "Plusieurs case"
                  }
                },
                {
                  "value": "radio",
                  "caption": {
                    "en": "Yes/No question",
                    "fr": "Oui / Non question"
                  }
                },
                {
                  "value": "textarea",
                  "caption": {
                    "en": "Textarea",
                    "fr": "Textarea"
                  }
                },
                {
                  "value": "rating",
                  "caption": {
                    "en": "Rating",
                    "fr": "Évaluation"
                  }
                },
                {
                  "value": "range",
                  "caption": {
                    "en": "Range",
                    "fr": "Gamme"
                  }
                }
              ]
            }
          ]
        },
        {
          "name": "options",
          "label": {
            "en": "Options",
            "fr": "Options"
          },
          "tooltip": {
            "en": "The 'textarea', 'rating' and 'range' question types doesn't need any options",
            "fr": "Les types de questions 'textarea',' rating ' et 'range' n'ont pas besoin d'options"
          },
          "type": "table",
          "max_size": 6,
          "inputs": [
            {
              "name": "text",
              "label": {
                "en": "Text",
                "fr": "Texte"
              },
              "type": "string"
            }
          ]
        }
      ]
    },
    {
      "name": "negative_questions",
      "label": {
        "en": "Negative flow questions",
        "fr": "Questions de flux négatif"
      },
      "type": "pages",
      "min_pages": 1,
      "max_pages": 10,
      "inputs": [
        {
          "name": "question",
          "type": "group",
          "label": {
            "en": "Question",
            "fr": "Question"
          },
          "inputs": [
            {
              "name": "text",
              "label": {
                "en": "Text",
                "fr": "Texte"
              },
              "type": "string",
              "lines": 3
            },
            {
              "name": "type",
              "label": {
                "en": "Type of answer",
                "fr": "Type de réponse"
              },
              "type": "enum",
              "default": "checkbox",
              "values": [
                {
                  "value": "checkbox",
                  "caption": {
                    "en": "Multiple checkbox",
                    "fr": "Plusieurs case"
                  }
                },
                {
                  "value": "radio",
                  "caption": {
                    "en": "Yes/No question",
                    "fr": "Oui / Non question"
                  }
                },
                {
                  "value": "textarea",
                  "caption": {
                    "en": "Textarea",
                    "fr": "Textarea"
                  }
                },
                {
                  "value": "rating",
                  "caption": {
                    "en": "Rating",
                    "fr": "Évaluation"
                  }
                },
                {
                  "value": "range",
                  "caption": {
                    "en": "Range",
                    "fr": "Gamme"
                  }
                }
              ]
            }
          ]
        },
        {
          "name": "options",
          "label": {
            "en": "Options",
            "fr": "Options"
          },
          "tooltip": {
            "en": "The 'textarea', 'rating' and 'range' question types doesn't need any options",
            "fr": "Les types de questions 'textarea',' rating ' et 'range' n'ont pas besoin d'options"
          },
          "type": "table",
          "max_size": 6,
          "inputs": [
            {
              "name": "text",
              "label": {
                "en": "Text",
                "fr": "Texte"
              },
              "type": "string"
            }
          ]
        }
      ]
    }
  ]
}